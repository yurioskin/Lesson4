<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_main_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_8dp"
        android:layout_marginTop="@dimen/default_8dp"
        android:layout_marginEnd="@dimen/default_8dp"
        android:layout_marginBottom="@dimen/default_8dp"
        android:text="@string/no_state"
        android:textSize="@dimen/default_30sp"
        app:layout_constraintBottom_toTopOf="@+id/button_main_change_state"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_main_change_state"
        android:layout_width="@dimen/default_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_8dp"
        android:layout_marginEnd="@dimen/default_8dp"
        android:layout_marginBottom="@dimen/default_8dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/change_state"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>